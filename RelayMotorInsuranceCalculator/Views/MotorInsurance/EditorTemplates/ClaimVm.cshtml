@model RelayMotorInsuranceCalculator.ViewModels.MotorInsurance.ClaimVm

<div class="col-md-4" style="margin-top: 7px">
    Date of claim
</div>
<div class="col-md-6">
    <div class="form-group">
        <div class='input-group date claimdatepicker'>
            @Html.EditorFor(o => o.ClaimDate, new { htmlAttributes = new { @class = "form-control" } })
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
    </div>
    @Html.ValidationMessageFor(o => o.ClaimDate, "", new { @class = "text-danger" })
</div>